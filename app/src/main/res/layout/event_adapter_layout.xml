<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventAdapterLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <TextView android:id="@+id/eventNoteTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="1dip"
        android:text="Event"
        android:textStyle="bold"
        android:background="#ff0000"/>
    
    <TextView android:id="@+id/eventNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="1.5dip"
        android:layout_marginRight="1.5dip"
        android:layout_marginBottom="1dip"
        android:layout_marginTop="1dip"
        android:layout_below="@+id/eventNoteTitleTextView"/>

    <TextView android:id="@+id/eventLocationTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/eventNameTextView"
        android:layout_marginLeft="1.5dip"
        android:layout_marginRight="1.5dip"
        android:layout_marginBottom="1dip"/>
    
    <TextView android:id="@+id/eventStartTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/eventLocationTextView"
        android:layout_marginLeft="1.5dip"
        android:layout_marginRight="1.5dip"
        android:layout_marginBottom="1dip"/>
    
    <TextView android:id="@+id/eventEndTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/eventStartTimeTextView"
        android:layout_marginLeft="1.5dip"
        android:layout_marginRight="1.5dip"
        android:layout_marginBottom="1dip"/>
    
</RelativeLayout>
